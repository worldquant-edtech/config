{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "types": ["node"],
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "types",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "alwaysShowRuleFailuresAsWarnings": false
      }
    ]
  },
  "include": ["./src"]
}
